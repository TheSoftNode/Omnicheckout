POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
LINEA_SEPOLIA_RPC_URL=https://rpc.sepolia.linea.build

# ==========================================
# BLOCK EXPLORER API KEYS (for contract verification)
# ==========================================
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY
SNOWTRACE_API_KEY=YOUR_SNOWTRACE_API_KEY
OPTIMISM_API_KEY=YOUR_OPTIMISM_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================

# Default charity address (update with real charity address)
DEFAULT_CHARITY_ADDRESS=0x0000000000000000000000000000000000000000

# Default charity percentage in basis points (250 = 2.5%)
