# Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Circle API Configuration
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENTITY_SECRET=your_circle_entity_secret_here

# Wallet Configuration - Add your private keys
EVM_PRIVATE_KEY=your_evm_private_key_here
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# CCTP Configuration
IRIS_API_URL=https://iris-api-sandbox.circle.com

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:./data/omnicheckout.db

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Session Configuration
SESSION_TIMEOUT_MINUTES=30
DEFAULT_FEE_PERCENTAGE=0.01
